{% extends 'profile_enseignant/layout.html.twig' %}

{% block title %}Gerer les Supports{% endblock %}

{% block bodylayout %}
    <h3>Gestion des Supports</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Type de seance</th>
                <th>Titre</th>
                <th>Description</th>
                <th>fichier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.typeSupport }}</td>
                <td>{{ support.titre }}</td>
                <td>{{ support.description }}</td>
                <td> <a href="{{ asset('uploads/pdf/'~ support.nomfichier) }}">voir fichier</a></td>
                <td>
                    <a href="{{ path('support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('support_new') }}">Create new</a>
{% endblock %}
