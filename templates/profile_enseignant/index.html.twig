{% extends 'profile_enseignant/layout.html.twig' %}

{% block title %}Hello ProfileEnseignantController!{% endblock %}

{% block bodylayout %}
<div class="container">
    <div class="row">
        <div class="col-4">
            <div class ="cadre-header ">INFORMATIONS GENERALES</h6></div>
            <div class ="cadre-body shadow p-3 mb-5 bg-white rounded">
                {% if(enseignant) %}   
                <div class="cadre-header mt-5">
                    <img src="/uploads/images/{{ enseignant.photo }}" class="rounded thumnails" width="150px" height="150px" alt="mon profil">
                </div>                
                <ul>
                    <li><strong>Matricule</strong> : {{ enseignant.matricule }}</li>
                    <li><strong>Nom</strong> : {{ enseignant.nom }}</li>
                    <li><strong>Prenom</strong> : {{ enseignant.prenom }}</li>
                    <li><strong>Email</strong> : {{ enseignant.email }}</li>
                    <li><strong>Telephone</strong> : {{ enseignant.telephone }}</li>
                    <li><strong>Adresse </strong> : {{ enseignant.adresse  }}</li>
                    <li><strong>Grade</strong> : {{ enseignant.grade }}</li>
                </ul>
                {%endif %}
            </div>      
        </div>
        <div class="col-8">
            <div class="cadre-header">EDT </div>
            <div class="cadre-body shadow p-3 mb-5 bg-white rounded"></div>

    </div>
    
    </div>
</div>

{% endblock %}

